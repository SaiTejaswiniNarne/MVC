@model WebApplication4.Models.Degree

@{

    ViewData["Title"] = "Details";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

<div>
    <h4>Degree</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DegreeAbbrev)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DegreeAbbrev)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DegreeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DegreeName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumberOfTerms)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberOfTerms)
        </dd>
        <dd>
            <table class="table">
                <tr>
                    <th>Number</th>
                    <th>Abbrev</th>
                    <th>Requirement Name</th>
                </tr>
                @foreach (var item in Model.DegreeCredits.OrderBy(r => r.CreditID))
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.CreditID) </td>
                        <td>@Html.DisplayFor(modelItem => item.DegreeID) </td>
                       
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.DegreeID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
</body>
</html>
