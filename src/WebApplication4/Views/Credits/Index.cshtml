@model IEnumerable<WebApplication4.Models.Credit>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.CreditAbbrev)</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.CreditName)</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.IsSummer)</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.IsSpring)</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.IsFall)</a>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreditAbbrev)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreditName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsSummer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsSpring)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsFall)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CreditID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.CreditID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.CreditID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
